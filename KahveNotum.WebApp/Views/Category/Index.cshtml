@using KahveNotum.WebApp
@model IEnumerable<KahveNotum.Entities.Category>

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="col-md-5 col-md-offset-1">
    <div class="col-md-10 col-md-offset-1">

    <h2>Kategoriler &nbsp;&nbsp; @Html.ActionLink("Create New", "Create", "Category", null, new { @class = "btn btn-warning" })</h2> 
        
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUsername)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedUsername)
        </td>
        <td>

            @Bootstrap.LinkButton("/Category/Edit/" + item.ID,"warning","btn-xs","Edit","Edit")

            @Bootstrap.LinkButton("/Category/Details/" + item.ID, "info", "btn-xs", "Details", "Details")
           
            @Bootstrap.LinkButton("/Category/Delete/" + item.ID, "danger", "btn-xs", "Delete", "Delete")
            
        </td>
    </tr>
}

</table>



<script>
    $(function () {

        $("footer").hide();

    });

</script>
